<script>
    $(function(){
        $('.memberlogin').hide();
        $('.at').on('click',function(){
            $('.memberlogin').hide(1000);
            $('.adminlogin').show(1000);
            $('.at').addClass('active1');
            $('.mt').removeClass('active1');
        });
        $('.mt').on('click',function(){
            $('.adminlogin').hide(1000);
            $('.memberlogin').show(1000);
            $('.mt').addClass('active1');
            $('.at').removeClass('active1');
        });
    });
</script>
